{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },

    {
      "src": "server/*",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    },
    
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
